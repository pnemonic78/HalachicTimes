<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/category_general">
        <ListPreference
            android:defaultValue="decimal"
            android:entries="@array/coords_format_entries"
            android:entryValues="@array/coords_format_values"
            android:key="coords.format"
            android:summary="@string/coords_format_summary"
            android:title="@string/coords_format_title"/>

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="summaries.visible"
            android:summaryOff="@string/summaries_hidden"
            android:summaryOn="@string/summaries_visible"
            android:title="@string/summaries_title"/>
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="past"
            android:summaryOff="@string/past_disabled"
            android:summaryOn="@string/past_enabled"
            android:title="@string/past_title"/>
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="gradient"
            android:summaryOff="@string/gradient_hidden"
            android:summaryOn="@string/gradient_visible"
            android:title="@string/gradient_title"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/category_opinion">
        <ListPreference
            android:defaultValue="16.1"
            android:entries="@array/dawn_entries"
            android:entryValues="@array/dawn_values"
            android:key="dawn"
            android:title="@string/dawn"/>
        <ListPreference
            android:defaultValue="11.5"
            android:entries="@array/tallis_entries"
            android:entryValues="@array/tallis_values"
            android:key="tallis"
            android:title="@string/tallis"/>
        <ListPreference
            android:defaultValue=""
            android:entries="@array/sunrise_entries"
            android:entryValues="@array/sunrise_values"
            android:key="sunrise"
            android:title="@string/sunrise"/>
        <ListPreference
            android:defaultValue="MGA"
            android:entries="@array/shema_entries"
            android:entryValues="@array/shema_values"
            android:key="shema"
            android:title="@string/shema"/>
        <ListPreference
            android:defaultValue="MGA"
            android:entries="@array/prayers_entries"
            android:entryValues="@array/prayers_values"
            android:key="prayers"
            android:title="@string/prayers"/>
        <ListPreference
            android:defaultValue=""
            android:entries="@array/midday_entries"
            android:entryValues="@array/midday_values"
            android:key="midday"
            android:title="@string/midday"/>
        <ListPreference
            android:defaultValue=""
            android:entries="@array/earliest_mincha_entries"
            android:entryValues="@array/earliest_mincha_values"
            android:key="earliest_mincha"
            android:title="@string/earliest_mincha"/>
        <ListPreference
            android:defaultValue=""
            android:entries="@array/mincha_entries"
            android:entryValues="@array/mincha_values"
            android:key="mincha"
            android:title="@string/mincha"/>
        <ListPreference
            android:defaultValue=""
            android:entries="@array/plug_hamincha_entries"
            android:entryValues="@array/plug_hamincha_values"
            android:key="plug_hamincha"
            android:title="@string/plug_hamincha"/>

        <net.sf.times.preference.SeekBarPreference
            android:defaultValue="18"
            android:key="candles"
            android:max="40"
            android:summary="@string/candles_summary"
            android:title="@string/candles_title"/>

        <ListPreference
            android:defaultValue=""
            android:entries="@array/sunset_entries"
            android:entryValues="@array/sunset_values"
            android:key="sunset"
            android:title="@string/sunset"/>
        <ListPreference
            android:defaultValue=""
            android:entries="@array/nightfall_entries"
            android:entryValues="@array/nightfall_values"
            android:key="nightfall"
            android:title="@string/nightfall"/>
        <ListPreference
            android:defaultValue=""
            android:entries="@array/midnight_entries"
            android:entryValues="@array/midnight_values"
            android:key="midnight"
            android:title="@string/midnight"/>
    </PreferenceCategory>

</PreferenceScreen>