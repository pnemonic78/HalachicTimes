<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="net.sf.times.compass"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- The application uses one or more features on the device for determining location, such as GPS location, network location, or cell location. -->
    <uses-feature
        android:name="android.hardware.location"
        android:required="false"/>
    <!-- The application uses directional readings from a magnetometer (compass) on the device. -->
    <uses-feature
        android:name="android.hardware.sensor.compass"
        android:required="true"/>

    <application
        android:name="net.sf.times.compass.CompassApplication"
        android:allowBackup="true"
        android:backupAgent="net.sf.times.backup.ZmanimBackupAgent"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/Theme.Compass.Dark">
        <activity
            android:name="net.sf.times.compass.CompassActivity"
            android:label="@string/title_activity_compass">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.app.Activity"/>
            <meta-data
                android:name="android.app.default_searchable"
                android:value="net.sf.times.location.LocationActivity"/>
        </activity>
        <activity
            android:name="net.sf.times.compass.preference.Compass10PreferenceActivity"
            android:label="@string/menu_settings"
            android:parentActivityName="net.sf.times.compass.CompassActivity">
        </activity>
        <activity
            android:name="net.sf.times.compass.preference.CompassPreferenceActivity"
            android:label="@string/menu_settings"
            android:parentActivityName="net.sf.times.compass.CompassActivity">
        </activity>
        <activity
            android:name="net.sf.times.location.LocationActivity"
            android:label="@string/title_activity_location"
            android:parentActivityName="net.sf.times.compass.CompassActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>

        <service
            android:name="net.sf.times.location.AddressService"
            android:exported="false"/>

        <meta-data
            android:name="com.google.android.backup.api_key"
            android:value="@string/google_backup_api_key"/>
    </application>

</manifest>