<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <net.sf.preference.SeekBarDialogPreference
        android:defaultValue="22"
        android:dialogIcon="@drawable/ic_opinion"
        android:dialogLayout="@layout/candles_seek"
        android:dialogTitle="@string/opinion"
        android:icon="@drawable/ic_opinion"
        android:key="candles"
        android:max="40"
        android:negativeButtonText="@android:string/cancel"
        android:positiveButtonText="@android:string/ok"
        android:title="@string/opinion"/>

    <ListPreference
        android:defaultValue=""
        android:dialogIcon="@drawable/ic_opinion"
        android:entries="@array/candles_chanukka_entries"
        android:entryValues="@array/candles_chanukka_values"
        android:icon="@drawable/ic_opinion"
        android:key="candles_chanukka"
        android:title="@string/candles_chanukka_opinion"/>
    <ListPreference
        android:defaultValue=""
        android:dialogIcon="@android:drawable/ic_dialog_alert"
        android:entries="@array/reminder_entries"
        android:entryValues="@array/reminder_values"
        android:icon="@drawable/ic_alarm"
        android:key="candles.reminder"
        android:title="@string/reminder"/>

    <SwitchPreference
        android:defaultValue="true"
        android:icon="@android:drawable/ic_media_play"
        android:key="candles.anim"
        android:title="@string/animations"/>
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="candles.emphasis"
        android:title="@string/emphasis_title"/>

</PreferenceScreen>