<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Widget" parent="android:Widget"/>

    <style name="Widget.ListView" parent="android:Widget.ListView"/>

    <style name="Widget.TextView" parent="android:Widget.TextView"/>

    <style name="Widget.TextView.Large">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="Widget.TextView.Medium">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="Widget.TextView.Small">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="Widget.ListDivider">
        <item name="android:background">@drawable/divider_horizontal_dark</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.ListItem">
        <item name="android:background">@android:drawable/list_selector_background</item>
    </style>

    <style name="Widget.ListItem.Dark">
    </style>

    <style name="Widget.ListItem.Light">
    </style>

    <style name="Widget.ListItem.NoGradient">
    </style>

    <style name="Widget.TextView.BigThin" parent="Widget.TextView.Large">
        <item name="android:layout_marginBottom">-15dp</item>
    </style>

    <style name="Widget.TextView.BigThin.Clock">
        <item name="android:textSize">@dimen/widget_big_font_size</item>
    </style>

    <style name="Widget.ListView.Dark">
        <item name="android:background">@drawable/list_gradient</item>
    </style>

    <style name="Widget.ListView.Light">
        <item name="android:background">@drawable/list_gradient_light</item>
    </style>

    <style name="Widget.ListView.NoGradient">
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.TextView.Title" parent="Widget.TextView.Medium">
        <item name="android:ellipsize">marquee</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.TextView.Time" parent="Widget.TextView.Medium">
    </style>

    <style name="Widget.TextView.Summary" parent="Widget.TextView.Small">
        <item name="android:maxLines">3</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Widget.TextView.Title.Dark">
        <item name="android:textColor">@color/primary_text_dark</item>
    </style>

    <style name="Widget.TextView.Title.Light">
        <item name="android:textColor">@color/primary_text_light</item>
    </style>

    <style name="Widget.TextView.Title.NoGradient">
    </style>

    <style name="Widget.TextView.Title.Widget">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="Widget.TextView.Time.Dark">
        <item name="android:textColor">@color/primary_text_dark</item>
    </style>

    <style name="Widget.TextView.Time.Light">
        <item name="android:textColor">@color/primary_text_light</item>
    </style>

    <style name="Widget.TextView.Time.NoGradient">
    </style>

    <style name="Widget.TextView.Time.Widget">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="Widget.TextView.Summary.Dark">
    </style>

    <style name="Widget.TextView.Summary.Light">
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
    </style>

    <style name="Widget.TextView.Summary.NoGradient">
    </style>

</resources>