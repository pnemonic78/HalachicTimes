<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Widget.ListView" parent="android:Widget.DeviceDefault.ListView" />

    <style name="Widget.ListItem">
        <item name="android:background">?android:attr/listChoiceBackgroundIndicator</item>
    </style>

    <style name="Widget.ListDivider">
        <item name="android:background">@drawable/divider_horizontal_dark</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppWidget.Clock">
        <item name="android:gravity">center</item>
    </style>

    <style name="Base.AppWidget.Clock.Time" parent="Widget.TextView.Large">
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textSize">@dimen/clock_widget_time_textSize</item>
    </style>

    <style name="AppWidget.Clock.Time" parent="Base.AppWidget.Clock.Time" />

    <style name="AppWidget.Clock.Title" parent="Widget.TextView.Medium">
        <item name="android:ellipsize">marquee</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <style name="Widget.ListView.Dark">
        <item name="android:background">@drawable/list_gradient</item>
    </style>

    <style name="Widget.ListView.Light">
        <item name="android:background">@drawable/list_gradient_light</item>
    </style>

    <style name="Widget.ListView.NoGradient" parent="Widget.ListView.Dark">
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.ListView.White" parent="Widget.ListView.Light">
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.Title" parent="Widget.TextView.Medium">
        <item name="android:ellipsize">marquee</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.Time" parent="Widget.TextView.Medium">
        <item name="android:gravity">right</item>
    </style>

    <style name="AppWidget.Title" parent="Widget.Title">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/widget_text</item>
    </style>

    <style name="AppWidget.Title.Odd" />

    <style name="AppWidget.Title.Light" parent="Widget.Light.TextView.Small">
        <item name="android:ellipsize">marquee</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/widget_text_light</item>
    </style>

    <style name="AppWidget.Time" parent="Widget.TextView.Small">
        <item name="android:textColor">@color/widget_text</item>
    </style>

    <style name="AppWidget.Time.Odd" />

    <style name="AppWidget.Time.Light" parent="Widget.Light.TextView.Small">
        <item name="android:textColor">@color/widget_text_light</item>
    </style>

    <style name="Widget.Summary" parent="Widget.TextView.Small">
        <item name="android:maxLines">3</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="AppWidget" parent="Widget" />

    <style name="AppWidget.Static">
        <item name="android:background">@drawable/bg_widget</item>
        <item name="android:padding">@dimen/widget_padding</item>
    </style>

    <style name="AppWidget.Static.Light">
        <item name="android:background">@drawable/bg_widget_light</item>
    </style>

    <style name="AppWidget.Date" parent="Widget.TextView.Small">
        <item name="android:ellipsize">marquee</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppWidget.Item" />

    <style name="AppWidget.Item.Odd">
        <item name="android:background">@color/bright</item>
    </style>

    <style name="AppWidget.Item.Light" />

    <style name="AppWidget.List" parent="AppWidget.Static" />

    <style name="AppWidget.List.Light" parent="AppWidget.Static.Light" />

    <style name="Widget.Date">
        <item name="android:background">@color/black_x80</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.Date.Light">
        <item name="android:background">@color/white_x80</item>
    </style>

    <style name="Widget.Date.Text" parent="Widget.TextView.Small">
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.Date.Text.Light" parent="Widget.Light.TextView.Small">
        <item name="android:gravity">center</item>
    </style>

    <style name="AppWidget.Clock.Light" />

    <style name="AppWidget.Clock.Time.Light">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="AppWidget.Clock.Title.Light">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="Widget.Detail" parent="Widget.Title">
        <item name="android:maxLines">3</item>
    </style>

    <style name="Base.Widget.Reminder.Time" parent="Widget.TextView.Large">
        <item name="android:textSize">@dimen/reminder_time</item>
    </style>

    <style name="Widget.Reminder.Time" parent="Base.Widget.Reminder.Time" />

    <style name="Widget.Reminder.Title" parent="Widget.TextView.Medium">
        <item name="android:ellipsize">marquee</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/reminder_title</item>
    </style>

</resources>