<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Widget.ListView" parent="android:Widget.ListView"/>

    <style name="Widget.ListDivider">
        <item name="android:background">@drawable/divider_horizontal_dark</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.ListItem.Dark"/>

    <style name="Widget.ListItem.Light"/>

    <style name="Widget.ListItem.NoGradient"/>

    <style name="Widget.ListItem.White"/>

    <style name="Widget.TextView.Clock.Time" parent="Widget.TextView.Large">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/widget_big_font_size</item>
    </style>

    <style name="Widget.TextView.Clock.Title" parent="Widget.TextView.Medium">
        <item name="android:ellipsize">marquee</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.ListView.Dark">
        <item name="android:background">@drawable/list_gradient</item>
    </style>

    <style name="Widget.ListView.Light">
        <item name="android:background">@drawable/list_gradient_light</item>
    </style>

    <style name="Widget.ListView.NoGradient" parent="Widget.ListView.Dark">
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.ListView.White" parent="Widget.ListView.Light">
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.TextView.Title" parent="Widget.TextView.Medium">
        <item name="android:ellipsize">marquee</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.TextView.Time" parent="Widget.TextView.Medium"/>

    <style name="Widget.TextView.Title.Dark">
        <item name="android:textColor">@color/primary_text_dark</item>
    </style>

    <style name="Widget.TextView.Title.Light" parent="Widget.Light.TextView.Medium">
        <item name="android:ellipsize">marquee</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/primary_text_light</item>
    </style>

    <style name="Widget.TextView.Title.NoGradient" parent="Widget.TextView.Title.Dark"/>

    <style name="Widget.TextView.Title.White" parent="Widget.TextView.Title.Light"/>

    <style name="Widget.TextView.Title.Widget">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="Widget.TextView.Time.Dark">
        <item name="android:textColor">@color/primary_text_dark</item>
    </style>

    <style name="Widget.TextView.Time.Light">
        <item name="android:textColor">@color/primary_text_light</item>
    </style>

    <style name="Widget.TextView.Time.NoGradient" parent="Widget.TextView.Time.Dark"/>

    <style name="Widget.TextView.Time.White" parent="Widget.TextView.Time.Light"/>

    <style name="Widget.TextView.Time.Widget" parent="Widget.TextView.Small"/>

    <style name="Widget.TextView.Summary" parent="Widget.TextView.Small">
        <item name="android:maxLines">3</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Widget.TextView.Summary.Dark"/>

    <style name="Widget.TextView.Summary.Light" parent="Widget.Light.TextView.Small">
        <item name="android:maxLines">3</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Widget.TextView.Summary.NoGradient"/>

    <style name="Widget.TextView.Summary.White" parent="Widget.TextView.Summary.Light"/>

</resources>