<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Zmanim" parent="Theme.AppCompat"/>

    <style name="Theme.Zmanim.Dark" parent="Theme.Zmanim">
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textColorPrimary">@android:color/primary_text_dark</item>
        <item name="android:textColorSecondary">@android:color/secondary_text_dark</item>

        <item name="listZmanim">@style/Widget.ListView.Dark</item>
    </style>

    <style name="Theme.Zmanim.Light" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textColorPrimary">@android:color/primary_text_light</item>
        <item name="android:textColorSecondary">@android:color/secondary_text_light</item>

        <item name="listZmanim">@style/Widget.ListView.Light</item>
    </style>

    <style name="Theme.Zmanim.NoGradient" parent="Theme.Zmanim.Dark">
        <item name="listZmanim">@style/Widget.ListView.NoGradient</item>
    </style>

    <style name="Theme.Zmanim.White" parent="Theme.Zmanim.Light">
        <item name="listZmanim">@style/Widget.ListView.White</item>
    </style>

    <style name="Theme.Zmanim.DayNight" parent="Theme.Zmanim.Light"/>

    <style name="Theme.Zmanim.Settings" parent="Theme.AppCompat.Settings"/>

    <style name="Theme.AppWidget.Dark" parent="Theme.Zmanim.Dark"/>

    <style name="Theme.AppWidget.Light" parent="Theme.Zmanim.Light"/>

</resources>