<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Zmanim" parent="Theme.Base"/>

    <style name="Theme.Zmanim.Dark">
        <item name="android:textColor">@android:color/primary_text_dark</item>

        <item name="listZmanim">@style/Widget.ListView.Dark</item>
        <item name="listZmanTitle">@style/Widget.Title.Dark</item>
        <item name="listZmanSummary">@style/Widget.Summary.Dark</item>
        <item name="listZmanDetail">@style/Widget.Detail.Dark</item>
    </style>

    <style name="Theme.Zmanim.Light" parent="Theme.Base.Light">
        <item name="android:textColor">@android:color/primary_text_light</item>

        <item name="listZmanim">@style/Widget.ListView.Light</item>
        <item name="listZmanTitle">@style/Widget.Title.Light</item>
        <item name="listZmanSummary">@style/Widget.Summary.Light</item>
        <item name="listZmanDetail">@style/Widget.Detail.Light</item>
    </style>

    <style name="Theme.Zmanim.NoGradient" parent="Theme.Zmanim.Dark">
        <item name="listZmanim">@style/Widget.ListView.NoGradient</item>
        <item name="listZmanTitle">@style/Widget.Title.NoGradient</item>
        <item name="listZmanSummary">@style/Widget.Summary.NoGradient</item>
        <item name="listZmanDetail">@style/Widget.Detail.NoGradient</item>
    </style>

    <style name="Theme.Zmanim.White" parent="Theme.Zmanim.Light">
        <item name="listZmanim">@style/Widget.ListView.White</item>
        <item name="listZmanSummary">@style/Widget.Summary.White</item>
        <item name="listZmanDetail">@style/Widget.Detail.White</item>
    </style>

    <style name="Theme.Zmanim.Settings" parent="Theme.Base.Settings"/>

    <style name="Theme.AppWidget.Dark" parent="Theme.Zmanim.Dark"/>

    <style name="Theme.AppWidget.Light" parent="Theme.Zmanim.Light"/>

</resources>