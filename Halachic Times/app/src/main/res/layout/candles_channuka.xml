<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="4dp">

    <com.github.times.CandleView
        android:id="@+id/candle_8"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="@string/candles"
        tools:src="@drawable/candle_0"/>

    <com.github.times.CandleView
        android:id="@+id/candle_7"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="@string/candles"
        tools:src="@drawable/candle_1"/>

    <com.github.times.CandleView
        android:id="@+id/candle_6"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="@string/candles"
        tools:src="@drawable/candle_2"/>

    <com.github.times.CandleView
        android:id="@+id/candle_5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="@string/candles"
        tools:src="@drawable/candle_3"/>

    <com.github.times.CandleView
        android:id="@+id/candle_shamash"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="@string/candles"
        android:paddingBottom="48dp"
        tools:src="@drawable/candle_4"/>

    <com.github.times.CandleView
        android:id="@+id/candle_4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="@string/candles"
        tools:src="@drawable/candle_5"/>

    <com.github.times.CandleView
        android:id="@+id/candle_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="@string/candles"
        tools:src="@drawable/candle_6"/>

    <com.github.times.CandleView
        android:id="@+id/candle_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="@string/candles"
        tools:src="@drawable/candle_7"/>

    <com.github.times.CandleView
        android:id="@+id/candle_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:contentDescription="@string/candles"
        tools:src="@drawable/candle_0"/>

</LinearLayout>