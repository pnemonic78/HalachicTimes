<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/date_gregorian"
    style="@style/AppWidget.Clock"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/widget_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/time"
        style="@style/AppWidget.Clock.Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/clock_widget_time_marginTop"
        android:shadowColor="@color/clock_shadow"
        tools:text="@tools:sample/date/hhmm" />

    <TextView
        android:id="@+id/title"
        style="@style/AppWidget.Clock.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/clock_widget_title_marginTop"
        tools:text="@tools:sample/lorem" />

</LinearLayout>